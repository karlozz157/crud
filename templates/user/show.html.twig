{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ entity.nickname }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-primary" href="/user/{{ entity.id }}/edit">Editar</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
